{
  "bindings": [
    {
      "name": "sms",
      "type": "queueTrigger",
      "direction": "in",
      "queueName": "queue-sms-poison",
      "connection": "StorageConnectionString"
    },
    {
      "name": "storage",
      "type": "blob",
      "direction": "out",
      "path": "sms/{correlationId}.json",
      "connection": "StorageConnectionString"
    },
    {
      "name": "errorStorage",
      "type": "blob",
      "direction": "out",
      "path": "sms-errors/{correlationId}.json",
      "connection": "StorageConnectionString"
    }
  ]
}